<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs')  %>
    <script src="/js/editAutoValidator.js" defer></script>
    <script src="/js/imagePreview.js"></script>
<body>
    <%- include('../partials/headerAdmin.ejs')  %> 
    <main class="container">
        <h3 class="text-center">Editar Auto</h3>
        <div class="container col-md-4">
            <form class="row g-3"  id="auto" action="/admin/editarAuto/<%= auto.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="col-12">
                    <label for="marca" class="form-label">Marca</label>
                    <input type="text" class="form-control" id="marca" name="marca" value="<%= (locals.old && old.marca) ? old.marca : auto.marca %>">
                    <small class="text-danger" id="errorMarca"><%= (locals.errors  && errors.marca) ? errors.marca.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="modelo" class="form-label">Modelo</label>
                    <input type="text" class="form-control" id="modelo" name="modelo" value="<%= (locals.old && old.modelo) ? old.modelo : auto.modelo %>">
                    <small class="text-danger" id="errorModelo"><%= (locals.errors  && errors.modelo) ? errors.modelo.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="anio" class="form-label">Año</label>
                    <input type="number" class="form-control" id="anio" name="anio" value="<%= (locals.old && old.anio) ? old.anio : auto.anio %>">
                    <small class="text-danger" id="errorAnio"><%= (locals.errors  && errors.año) ? errors.año.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="color" class="form-label">Color</label>
                    <input type="text" class="form-control" id="color" name="color" value="<%= (locals.old && old.color) ? old.color : auto.color %>">
                    <small class="text-danger" id="errorColor"><%= (locals.errors  && errors.color) ? errors.color.msg : "" %></small>
                </div>
                <div class="col-12">

                    <label for="sucursal" class="form-label">Sucursal</label>
                    <select name="sucursal" id="categoria">
                        <option selected hidden value="<%= auto.sucursal.id %>"><%= auto.sucursal.nombre %></option>
                        <% getSucursales.forEach( sucursal => { %>
                            <option value="<%= sucursal.id %> "><%= sucursal.nombre %> </option>
                        <% }) %> 
                    </select>
                    <small class="text-danger"><%= (locals.errors  && errors.sucursal) ? errors.sucursal.msg : "" %></small>
                </div>
                <div id="imagePreview" class="text-center">
                    <img src="/images/<%= auto.imagen %>" alt="" width="200px" height="200px">
                </div>
                <div class="col-12">
                    <label for="inputFile" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="inputFile" name="image" onchange="return fileValidation()">
                </div>
                <small class="text-danger" id="errorImagen"></small>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">EDITAR</button>
                </div>
            </form>
        </div>
    </main>
   
    <%- include('../partials/scripts.ejs')  %> 
</body>
</html>