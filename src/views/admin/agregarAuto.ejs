<!DOCTYPE html>
<html lang="es">
    <%- include('../partials/head.ejs')  %> 
<body>
    <%- include('../partials/headerAdmin.ejs')  %> 
    <main class="container">
        <h3 class="text-center">Agregar Auto</h3>
        <div class="container col-md-4">
            <form class="row g-3" action="/admin/agregarAuto" method="POST" enctype="multipart/form-data">
                <div class="col-12">
                    <label for="marca" class="form-label">Marca</label>
                    <input type="text" class="form-control" id="marca" name="marca" value="<%= (locals.old && old.marca) ? old.marca : '' %>">
                    <small class="text-danger"><%= (locals.errors  && errors.marca) ? errors.marca.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="modelo" class="form-label">Modelo</label>
                    <input type="text" class="form-control" id="modelo" name="modelo" value="<%= (locals.old && old.modelo) ? old.modelo : '' %>">
                    <small class="text-danger"><%= (locals.errors  && errors.modelo) ? errors.modelo.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="anio" class="form-label">AÃ±o</label>
                    <input type="number" class="form-control" id="anio" name="anio" value="<%= (locals.old && old.anio) ? old.anio : '' %>">
                    <small class="text-danger"><%= (locals.errors  && errors.anio) ? errors.anio.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="color" class="form-label">Color</label>
                    <input type="text" class="form-control" id="color" name="color" value="<%= (locals.old  && old.color) ? old.color : "" %>">
                    <small class="text-danger"><%= (locals.errors  && errors.color) ? errors.color.msg : "" %></small>
                </div>
                <div class="col-12">
                    <label for="sucursal" class="form-label">Sucursal</label>
                    <select name="sucursal" id="categoria">
                        <% getSucursales.forEach( sucursal => { %>
                            <option value="<%= sucursal.id %> "><%= sucursal.nombre %> </option>
                        <% }) %> 
                    </select>
                    <small class="text-danger"><%= (locals.errors  && errors.sucursal) ? errors.sucursal.msg : "" %></small>
                </div>
                <!-- Image preview -->
                <div id="imagePreview"></div>
                <div class="col-12">
                    <label for="inputFile" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="inputFile" name="image" onchange="return fileValidation()"/>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">AGREGAR</button>
                </div>
            </form>
        </div>
    </main>
   <script src="/js/imagePreview.js"></script>
    <%- include('../partials/scripts.ejs')  %> 
</body>
</html>